{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",

    "sourceMap": false, // можно true, если очень нужен дебаг
    "inlineSources": false,

    "removeComments": true // чистим комменты с js
  },

  "include": ["src"],
  "exclude": [
    "**/__tests__/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "dist",
    "node_modules"
  ]
}
