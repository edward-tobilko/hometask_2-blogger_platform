{
  "name": "hometask_2-blog_platform",
  "version": "1.0.0",
  "description": "Express REST API backend course pet-project Blog Platform",
  "author": "eduard.tobilko",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts,tsx --exec \"node --inspect=9229 --enable-source-maps --import tsx src/server.ts\"",
    "jest": "jest -i",
    "test:coverage": "jest -i --coverage src/__tests__",
    "test:e2e": "jest -i src/__tests__",
    "lint": "eslint --fix .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-validator": "^7.2.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "jest": "29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "29.2.5",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
