{
  "name": "hometask_2-blogger_platform",
  "version": "1.0.0",
  "description": "Express REST API backend course pet-project Blogger Platform",
  "author": "eduard.tobilko",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node dist/server.js",
    "prod": "yarn build && yarn start",
    "dev": "cross-env NODE_ENV=development tsx watch --inspect -r tsconfig-paths/register src/server.ts",
    "test:e2e": "cross-env NODE_ENV=test jest -c jest-e2e.config.cjs -i",
    "test:unit": "cross-env NODE_ENV=test jest -c jest-unit.config.cjs",
    "test": "yarn test:unit && yarn test:e2e",
    "lint": "eslint --fix .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "crypto": "^1.0.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongodb": "^6.20.0",
    "nodemailer": "^7.0.12",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0",
    "ua-parser-js": "^2.0.7"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.7.10",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@types/nodemailer": "^7.0.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "cross-env": "^10.1.0",
    "i": "^0.3.7",
    "jest": "29.7.0",
    "jest-mock-extended": "^4.0.0",
    "nodemon": "^3.1.10",
    "npm": "^11.7.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "swagger-jsdoc": "^6.2.8",
    "ts-jest": "29.2.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
