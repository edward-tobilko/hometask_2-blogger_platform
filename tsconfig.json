{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "src",
    "types": ["jest", "node"],

    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "src",

    "paths": {
      "@core/*": ["core/*"], // для удобного импорта файлов
      "@tests/*": ["src/__tests__/*"]
    }
  },

  "files": ["src/types/express.d.ts"],

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
